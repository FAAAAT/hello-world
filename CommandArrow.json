//https://pqrs.org/osx/karabiner/complex_modifications//json//fn_plus_plsemicolonquote_to_arrow_keys.json
{
    "title": "Change command + o/l/k/; to arrow keys",
    "rules": [
      {
        "description": "Change command + o/l/k/; to arrow keys",
        "manipulators": [
        {
            "type": "basic",
            "from": {
              "key_code": "o",
              "modifiers": {
                "mandatory": [
                  "left_command"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "up_arrow"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "l",
              "modifiers": {
                "mandatory": [
                  "left_command"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "down_arrow"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "k",
              "modifiers": {
                "mandatory": [
                  "left_command"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "left_arrow"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "quote",
              "modifiers": {
                "mandatory": [
                  "left_command"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "right_arrow"
              }
            ]
          }
        ]
      }
    ]
  }
